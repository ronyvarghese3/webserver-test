node {
  stage('test'){
    sh "echo inside and ls -ltr"
  }

  stage('Deploying into Openshift') {
              sh "oc process -f deployment.yaml -p image_source=${image_source} -n ronyvarghese3-dev | oc apply -f - -n ronyvarghese3-dev"
            }
  }

  if (currentBuild.currentResult == 'SUCCESS') { 
      stage('Deploy') { 
        sh './deployscript'  
      } 
  } 
}
