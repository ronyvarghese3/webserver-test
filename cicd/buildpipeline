pipeline {
    agent {
        label 'docker-agent' // Specify a Jenkins agent with Docker installed
    }
    
    environment {
        DOCKER_IMAGE_NAME = 'webserver-test:latest'
        DOCKER_REGISTRY_URL = 'ronyvarghese3'
        GITHUB_REPO_URL = 'https://github.com/ronyvarghese3/webserver-test.git'
    }

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    // Clone the repository
                    git branch: 'main', credentialsId: 'githubcred', url: GITHUB_REPO_URL
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    sh "docker build -t $DOCKER_IMAGE_NAME ."
                }
            }
        }

        stage('Push Docker Image to Registry') {
            steps {
                script {
                    // Tag the Docker image
                    sh "docker tag $DOCKER_IMAGE_NAME $DOCKER_REGISTRY_URL/$DOCKER_IMAGE_NAME"

                    // Push the Docker image to the registry
                    sh "docker push $DOCKER_REGISTRY_URL/$DOCKER_IMAGE_NAME"
                }
            }
        }

        // Add more stages for your build, test, deploy, etc.
    }

    post {
        success {
            echo 'Pipeline successfully executed!'
        }

        failure {
            echo 'Pipeline failed!'
        }
    }
}
