pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = 'my-webserver'
        DOCKER_REGISTRY_URL = 'ronyvarghese3'
        GITHUB_REPO_URL = 'https://github.com/ronyvarghese3/webserver-test.git'
    }

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    // Clone the repository
                    git branch: 'main', credentialsId: 'githubcred', url: GITHUB_REPO_URL
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    sh "docker build -t $DOCKER_IMAGE_NAME:latest ."
                }
            }
        }

        stage('Docker Hub login') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerHub', passwordVariable: 'password', usernameVariable: 'username')]) {
                        sh "docker login -u $username -p $password"
                    }
                }
            }
        }

        stage('Push Docker Image to Registry') {
            steps {
                script {
                    // Tag the Docker image
                    sh "docker tag $DOCKER_IMAGE_NAME $DOCKER_REGISTRY_URL/$DOCKER_IMAGE_NAME:latest"
                    
                    // Push the Docker image to the registry
                    sh "docker push $DOCKER_REGISTRY_URL/$DOCKER_IMAGE_NAME:latest"
    
                }
            }
        }

        // Add more stages for your build, test, deploy, etc.
    }

    post {
        success {
            echo 'Pipeline successfully executed!'
        }

        failure {
            echo 'Pipeline failed!'
        }
    }
}
